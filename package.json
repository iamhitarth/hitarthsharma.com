{
  "name": "hitarthsharma",
  "description": "Hitarth Sharma's site",
  "version": "1.0.0",
  "author": "Hitarth Sharma <hitarth.sharma@gmail.com>",
  "dependencies": {
    "gatsby": "^2.0.0-beta.106",
    "gatsby-plugin-react-helmet": "^3.0.0-beta.4",
    "gatsby-plugin-sharp": "^2.0.0-beta.9",
    "gatsby-plugin-typography": "^2.2.0-beta.3",
    "gatsby-remark-copy-linked-files": "^1.5.37",
    "gatsby-remark-embed-video": "^1.4.0",
    "gatsby-remark-images": "^2.0.1-beta.11",
    "gatsby-remark-responsive-iframe": "^1.4.20",
    "gatsby-source-filesystem": "^2.0.1-beta.10",
    "gatsby-transformer-remark": "^2.1.1-beta.6",
    "graphql-tools": "^3.1.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-typography": "^0.16.13",
    "typography": "^0.16.17",
    "typography-theme-alton": "^0.15.10",
    "typography-theme-fairy-gates": "^0.15.11",
    "typography-theme-irving": "^0.15.10",
    "typography-theme-noriega": "^0.15.10",
    "typography-theme-sutro": "^0.15.10"
  },
  "keywords": [
    "gatsby",
    "hitarth",
    "sharma",
    "site",
    "blog"
  ],
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write 'src/**/*.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "postmerge": "yarnhook",
    "postcheckout": "yarnhook",
    "postrewrite": "yarnhook"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "prettier": "^1.12.0",
    "react-testing-library": "^5.2.0",
    "yarnhook": "^0.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamhitarth/hitarthsharma.com"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/config/jestPreprocess.js"
    },
    "testRegex": "/.*(__tests__\\/.*)|(.*(test|spec))\\.jsx?$",
    "moduleNameMapper": {
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "testPathIgnorePatterns": [
      "node_modules",
      ".cache"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "globals": {
      "__PATH_PREFIX__": ""
    },
    "testURL": "http://localhost",
    "setupFiles": [
      "<rootDir>/config/loaderShim.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/testsSetup.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  }
}
